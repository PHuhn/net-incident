@model NSG.Identity.Models.RegisterBindingModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserNicName, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.UserNicName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ServerShortName, new { @class = "col-lg-2 col-md-3 col-sm-12 control-label" })
            <div class="col-lg-9 col-md-9 col-sm-12">
                @Html.TextBoxFor(m => m.ServerShortName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-6 col-lg-6 col-md-6 col-sm-12">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
